@using SimchaFundHw.Data;
@model ContributionsViewModel
<div b-2ya7vgwtda class="container">
    <main b-2ya7vgwtda role="main" class="pb-3" style="margin-top: 60px;">

        <div class="header">
            <h1>
                Contributors for the
                Joe Biden for President 2024 simcha
            </h1>
        </div>
        <div class="table-responsive">
            <form method="POST" action="/simchas/updatecontributions">
                <input type="hidden" name="simchaId" value="3061" />
                <table class="table table-bordered table-striped">
                    <tr>
                        <th>Contribute</th>
                        <th>Name</th>
                        <th>Balance</th>
                        <th>Always Include</th>
                        <th>Amount</th>
                    </tr>

                    @foreach (Contribution c in Model.Contributors)
                    {
                        <input type="hidden" name="contributors[0].ContributorId" value="2033" />
                        <tr>
                            <td>
                                <div class="d-flex justify-content-center">
                                    <div class="form-check form-switch">
                                        <input style="width: 4rem; height: 2rem;" name="contributors[0].Include" class="form-check-input" type="checkbox" checked value="true">
                                    </div>
                                </div>
                            </td>
                            <td>@c.Name</td>
                            <td>@c.Balance.ToString("C")</td>
                            <td style="text-align: center;">
                                <i style="font-size:30px" class="bi bi-check"></i>
                            </td>
                            <td>
                                <input type="text" name="contributors[0].amount" class="form-control" value=@c.Amount.ToString("C") />
                            </td>
                        </tr>
                    }

                </table>
                <div style="text-align:center;">
                    <button class="btn-lg btn-danger">Update</button>
                </div>
            </form>
        </div>

    </main>
</div>